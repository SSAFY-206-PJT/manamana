                    CONTAINER_NAME = "manamana-fronted"
                    PROJECT_DIR = "frontend"
                }
            }
        }

        stage("Node install & build") {
            steps {
                dir("${PROJECT_DIR}"){
                    sh "pwd"
                    sh "npm i"
                    sh "npm run build"
                    sh "pwd"
                }
            }
        }

