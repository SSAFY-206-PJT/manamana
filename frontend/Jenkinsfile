pipeline {
    agent any
    tools {nodejs "nodejs-18.12.1"}

    stages {
        stage("Set Variable") {
            steps {
                script {
                    IMAGE_NAME = "sh80165/manaman-frontend"
                    IMAGE_STORAGE = "https://registry.hub.docker.com"
                    IMAGE_STORAGE_CREDENTIAL = "docker-hub"
                    NODE_BUILD_PATH = "./build"
